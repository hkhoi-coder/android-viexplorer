<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/hcmc_cover"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/iv_region_cover"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_region_name"
        android:textStyle="bold"
        android:textColor="@color/White"
        android:shadowColor="@color/Black"
        android:text="Ho Chi Minh City"
        android:padding="20dp"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_region_description"
        android:textStyle="italic"
        android:textColor="@color/White"
        android:shadowColor="@color/Black"
        android:text="Ho Chi Minh City description goes here!"
        android:paddingLeft="20dp"
        android:layout_alignBottom="@+id/tv_region_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>